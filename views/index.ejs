<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookMarked</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <div class="header-section">
            <h1 class="text-white">Bookmarked</h1>
            <div class="container">
                <nav class="navbar navbar-expand-lg sort navigate">
                    <div class="container-fluid">
                      <%# Implement Sorting features %>
                        <a class="navbar-brand text-white" href="#">Sort by</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active text-white" href="/?sort=title">Title</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/?sort=newest">Newest</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/?sort=best">Best</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <div class="container d-flex justify-content-center search-container">
        <form action="/" method="GET" class="d-flex">
            <input class="form-control search-bar me-2" type="search" name="search" placeholder="Search by title or author" aria-label="Search">
            <button class="btn search-button"  type="submit">Search</button>
        </form>
    </div>

    <!-- Book Section -->
    <div class="container text-center">
        <% books.forEach(book => { %>
        <div class="row">
            <div class="col">
              <div class="recommendation">
                Recommendation Score: <%= book.recommendation_score %>/ 10
              </div>

              <div class="read-date">
                Date-Read:  <%#= book.date_read %>
                <%= book.formattedDateRead %>
                <%# Have to alter the date in some form %>
              </div>
                <div class="img-container">
                    <img class="book-img" src="<%= book.coverUrl %>" alt="<%= book.name %> cover">
                </div>
                <div class="origin">
                    <h3 class="title"><%= book.name %></h3>
                    <h4 class="author">By <%= book.author %></h4>
                </div>
                <div class="description">
                    <p class="opinion"><%= book.description %></p>
                    <p><a href="/book/<%= book.id %>">Read more notes</a></p>
                </div>
            </div>
        </div>
        <% }) %>
    </div>

    <footer>
        <p>&copy; <%= currentYear %> BookMarked. All rights reserved.</p>
        <nav>
            <ul>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="#privacy">Privacy Policy</a></li>
            </ul>
        </nav>
        <p>ranapeboikano9@gmail.com</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
